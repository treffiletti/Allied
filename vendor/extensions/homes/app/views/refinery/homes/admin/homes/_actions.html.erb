<ul>
  <% if ::Refinery::Homes::Admin::HomesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.homes_admin_homes_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_homes_admin_home_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Homes::Admin::HomesController.sortable? && ::Refinery::Homes::Home.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Homes"),
                 refinery.homes_admin_homes_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Homes"),
                 refinery.homes_admin_homes_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
